{
  "name": "nypl/microservice-starter",
  "description": "NYPL Microservice Starter",
  "authors": [
    {
      "name": "Kevin Friedman",
      "email": "kevinfriedman@nypl.org"
    }
  ],
  "require": {
    "slim/slim": "^4.14.0",
    "faapz/pdo": "^2.2.0",
    "monolog/monolog": "^3.7.0",
    "danielstjules/stringy": "^3.1",
    "zircote/swagger-php": "^4.10.6",
    "aws/aws-sdk-php": "^3.319.4",
    "vlucas/phpdotenv": "^5.6.1",
    "guzzlehttp/guzzle": "^7.9.2",
    "aura/di": "4.*",
    "nealio82/avro-php": "^0.1.2",
    "cweagans/composer-patches": "^1.7"
  },
  "autoload": {
    "psr-4": {
      "NYPL\\Starter\\": [
        "src/"
      ]
    }
  },
  "extra": {
    "patches": {
      "nealio82/avro-php": {
        "Allow integers": "patches/avro-php-allow-integers.patch"
      }
    }
  },
  "config": {
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  }
}
